#include <iostream>

using namespace std;

void bunga(float a, float i, float n);

void bunga(float a, float i, float n) {
	float j=0, b,l;
	for (float z = 1; z <= n; z++) {
		b = 0;
		if (z == 1) {
			b = 1 + (i / 100);
			j = j + b;
		} 
		if(z >1){
			b = 1 + (i / 100);
			l = z;
			b = (b, i);
			j = j + b;
		}
	}
	float total;
	total = a * j;
	cout << "==============================" << endl;
	cout << "saldo akhir anda : " << total;

}

int main() {
	float a,i,n;
	cout << "saldo awal anda : ";
	cin >> a;
	cout << "sudah disimpan (tahun) : ";
	cin >> n;
	cout << "Bunga tahunan (%) : ";
	cin >> i;
	cout << endl;
	bunga(a, i, n);
}
